@model RazorPayDemo.Models.PaymentInitiateModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="Containner">
        <div class="row my-4 py-4">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">
                <form action="/Payment/CreateOrder" method="post">
                    <label for="fname">Name:</label><br>
                    <input type="text" id="Name" name="Name" class="form-control">
                    <label for="lname">Email:</label><br>
                    <input type="text" id="Email" name="Email" class="form-control">
                    <label for="fname">Mobile:</label><br>
                    <input type="text" id="Mobile" name="Mobile" class="form-control">
                    <label for="lname">Address:</label><br>
                    <input type="text" id="Address" name="Address" class="form-control">
                    <label for="lname">Amount:</label><br>
                    <input type="text" id="Amount" name="Amount" class="form-control"><br>
                    <input type="submit" value="Submit" class="btn btn-danger btn-block" onclick="return Validate();">
                </form>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
    </div>
</body>
</html>

<script>
    $.document.ready(function () {
        function Validate() {
            debugger;
            if ($("#Name").val() == '') {
                $("#Name").addClass('errortext');
                $("#Name").Focus();
                return false;
            }
            if ($("#Amount").val() == '') {
                $("#Amount").addClass('errortext');
                $("#Amount").Focus();
                return false;
            }
            return true;
        }
    });
</script>
<style>
    .errortext{
        border:1px solid red !important;
        background:#e47373 !important;
    }
</style>
